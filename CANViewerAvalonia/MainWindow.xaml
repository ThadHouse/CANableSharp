<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="CANViewerAvalonia.MainWindow"
        Title="FRC CAN Viewer">
  <StackPanel>
    <StackPanel Orientation="Horizontal">
      <Button Command="{Binding Refresh}">Refresh Interfaces</Button>
      <ComboBox Items="{Binding CANDevices}"></ComboBox>
    </StackPanel>
    <DataGrid Items="{Binding CANMessages}" x:Name="DataGrid" AutoGenerateColumns="True" CanUserResizeColumns="True">
    </DataGrid>
  </StackPanel>
  <!--<dg:DataGrid ItemsSource="{Binding CANMessages, Mode=OneWay}" AutoGeneratingColumn="DataGrid_AutoGeneratingColumn" AlternatingRowBackground="Gainsboro"  AlternationCount="2">


  </dg:DataGrid>-->
</Window>
